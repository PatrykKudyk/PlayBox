<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:id="@+id/row_menu_card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="4dp"
        tools:cardBackgroundColor="@color/colorYellowLight"
        tools:strokeColor="@color/colorYellowDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:weightSum="100">

            <ImageView
                android:id="@+id/menu_image_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                tools:src="@drawable/charade"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

            <TextView
                android:id="@+id/menu_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="64"
                tools:text="Beer Pong"
                android:textSize="40dip"
                android:gravity="center_vertical|left"
                android:fontFamily="@font/dustismo_bold"
                />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>